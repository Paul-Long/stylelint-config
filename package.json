{
  "name": "stylelint-config",
  "version": "1.0.0",
  "description": "stylelint order",
  "main": "index.js",
  "scripts": {
    "style-fix": "stylelint '**/*.css' --fix",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,less}": ["npm run style-fix", "git add ."]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paul-Long/stylelint-config.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Paul-Long/stylelint-config/issues"
  },
  "homepage": "https://github.com/Paul-Long/stylelint-config#readme",
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "stylelint": "^13.13.1",
    "stylelint-order": "^5.0.0"
  }
}
